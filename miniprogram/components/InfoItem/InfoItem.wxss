/* components/InfoItem/InfoItem.wxss */
.list-box{
  margin:25rpx 0;
  background-color: #fff;
  border-radius: 10rpx;
  display: flex;
  overflow: hidden;
  position: relative;
}
.img-box{
  width: 200rpx;
  height: 200rpx;
}
.img-box image{
  width: 200rpx;
  height: 200rpx;
}
.list-box .info{
  margin:25rpx;
 
}
.list-box .info .introduction{
  color: rgb(141, 141, 141)
}
.icon-box{
  display: flex;
  position: absolute;
  right: 0;
  bottom:0;
}
.icon-num{
  margin:20rpx;
  color: #ccc;
}
.open-img{
  position: absolute;
  left: 220rpx;
  bottom:10rpx;
  color:#ccc;
  font-size: 22rpx;
}